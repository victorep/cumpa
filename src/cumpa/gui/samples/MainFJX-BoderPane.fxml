<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<BorderPane
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cumpa.gui.MainGUI">
    <top>

        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" ></Insets>
            </padding>
            <Label text="Grocery Items List">
                <font>
                    <Font size="30"></Font>
                </font>
            </Label>
        </HBox>

    </top>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10" right="10"></Insets>
            </padding>
            <Button text="Add new" prefWidth="90"></Button>
            <Button text="Edit" prefWidth="90"></Button>
            <Button text="Remove" prefWidth="90"></Button>
            <Button text="Exit" prefWidth="90"></Button>
        </HBox>

    </bottom>


</BorderPane>
